{
    "semi": true,
    "tabWidth": 2,
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "endOfLine": "lf",
    "overrides": [
        {
            "files": "*.md",
            "options": {
                "proseWrap": "always",
                "embeddedLanguageFormatting": "auto"
            }
        },
        {
            "files": "*.mdx",
            "options": {
                "proseWrap": "preserve",
                "embeddedLanguageFormatting": "auto"
            }
        }
    ]
}